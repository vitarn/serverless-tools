{
  "name": "serverless-tools",
  "version": "0.0.9",
  "description": "Serverless toolbox",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "testing": "jest --watch",
    "coverage": "jest --coverage --maxWorkers=4",
    "typecheck": "tsc --noEmit",
    "release": "standard-version",
    "prepack": "tsc --removeComments --inlineSourceMap false | echo shut up"
  },
  "dependencies": {
    "accepts": "^1.3.4",
    "content-type": "^1.0.4",
    "http-errors": "^1.6.2",
    "koa-compose": "^4.0.0",
    "koa-is-json": "^1.0.0",
    "lodash.get": "^4.4.2",
    "lodash.omit": "^4.5.0",
    "mime-types": "^2.1.18",
    "statuses": "^1.4.0",
    "type-is": "^1.6.16"
  },
  "devDependencies": {
    "@koa/cors": "^2.2.1",
    "@types/aws-lambda": "^0.0.33",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/sinon": "^4.1.4",
    "jest": "^22.4.2",
    "sinon": "^4.4.2",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.4.0",
    "typescript": "^2.7.2"
  },
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "!test",
    "!types/**/*.js"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(t)sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
